		<h1>
			Search Results
		</h1>
        <hr style="color:#1C2535;border-color:#1C2535;"/>
        
        <% form_tag doc_search_path, :method => 'get' do %>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", :name => nil %>
        <% end %>
    
        <% @order.each do |title| %>
            <% article = @found_articles[title] %>
            <% div = title.split('/') %>
            <% header = div[div.length - 1] %>
            <% header = header[0..header.length - 5] %>
            <h2><a href="<%= @links[title] %>"> <%= header %> </a></h2>
            <p> <%= article %> <br /><br /> </p> 
        <% end %>
        
